<Window x:Class="Airhub.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airhub"
        mc:Ignorable="d"
        
        Title="Window2">
    <Grid Background="#0e3159">

        <Image Name="bg" Source="/img/bg.png" />
        <TextBox HorizontalAlignment="Left" Margin="117,152,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="151" TextChanged="TextBox_TextChanged" Height="32"/>
        <TextBox HorizontalAlignment="Left" Margin="117,0,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" Width="151" TextChanged="TextBox_TextChanged" Height="32"/>
    </Grid>
</Window>
